{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["es2020", "dom"],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"types": [],
		"esModuleInterop": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": ["src/**/*.js"],
	"exclude": ["node_modules", "coverage", "dist", "docs"]
}
